<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:baselineAligned="false"
        android:background="@color/popUpBackground"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:layout_weight="33.3"
            android:orientation="vertical">

            <TextView

                android:id="@+id/myListItem"
                android:textColor="@color/orangePrimary"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/item_name" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/myReqDistance"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fullcircle2"
                    android:gravity="center"
                    android:text="0m"
                    android:textColor="@color/pureWhite"
                    android:textSize="15sp"
                    android:textStyle="bold">
                </TextView>

                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/kategorie_gauc">

                </ImageView>
            </LinearLayout>
        </LinearLayout>

            <TextView
                android:textColor="@color/orangePrimary"
                android:id="@+id/myListAdress"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:text="@string/menu_adres" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>