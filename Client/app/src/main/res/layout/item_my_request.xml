<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_weight="33.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myListName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_name" />

            <TextView
                android:id="@+id/myListAdress"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/menu_adres" />

            <TextView
                android:id="@+id/myListDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_dis" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_weight="33.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_name" />

            <TextView
                android:id="@+id/myListDes"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:text="@string/menu_description" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageViewClicker"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                app:srcCompat="@android:drawable/ic_menu_info_details"
                android:contentDescription="@string/info">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>