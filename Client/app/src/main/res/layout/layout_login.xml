<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/splashImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/borrow_it"
        android:scaleY="0.5"
        android:scaleX="0.5"
        android:translationY="@dimen/distance" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_designe_1"
        android:text="@string/log_button"
        android:textColor="@color/pureWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwEditTextLayout" />

    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_designe_2"
        android:text="@string/reg_button"
        android:textColor="@color/pureWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginButton" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loginEditTextLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/orangePrimary"
        android:textColorHint="@color/orangePrimary"
        app:backgroundTint="@color/orangePrimary"
        app:hintTextColor="@color/orangePrimary"
        app:boxBackgroundColor="@color/orangePrimary"
        app:boxStrokeColor="@color/orangePrimary"
        app:hintTextAppearance="@style/textlabel_hint"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/loginEditText"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:autofillHints="@string/user_name"
            android:hint="@string/user_name"
            android:inputType="textPersonName"
            android:textColor="@color/orangePrimary"
            android:textColorHint="@color/orangePrimary"
            app:backgroundTint="@color/orangePrimary" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwEditTextLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginEditTextLayout"
        android:textColor="@color/orangePrimary"
        android:textColorHint="@color/orangePrimary"
        app:backgroundTint="@color/orangePrimary"
        app:hintTextAppearance="@style/textlabel_hint"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/passwEditText"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:autofillHints="@string/pass_text"
            android:ems="10"
            android:hint="@string/pass_text"
            android:inputType="textPassword"
            android:textColor="@color/orangePrimary"
            android:textColorHint="@color/orangePrimary"
            app:backgroundTint="@color/orangePrimary" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>